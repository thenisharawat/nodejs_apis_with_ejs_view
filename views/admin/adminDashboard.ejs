    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />


    <title>
        <%= title %>
    </title>

    <% if (typeof notLogin !=='undefined' && notLogin) { %>
        <script>
            window.alert("<%= notLogin %>");
        </script>
        <% } %>
            <%- include('common.ejs') %>

                <link rel="icon" type="image/x-icon" href="/images/logo.ico">

                <!-- bootstrap core css -->
                <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />

                <!-- Navbar css -->
                <link rel="stylesheet" type="text/css" href="/css/admin/admin-navbar.css" />

                <!-- Table css -->
                <link rel="stylesheet" type="text/css" href="/css/admin/table.css" />

                <!-- fonts style -->
                <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins:400,700&display=swap"
